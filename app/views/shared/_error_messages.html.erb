<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%=  "#{t(:form_contain)} #{object.errors.count} #{object.errors.count <= 1 ? t(:error) : t(:errors) }"  %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>